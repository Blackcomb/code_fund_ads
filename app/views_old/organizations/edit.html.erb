<% content_for :breadcrumbs do %>
  <%= render "/shared/breadcrumbs/organizations" %>
  <%= render "/shared/breadcrumbs/organization", organization: @organization %>
  <%= render "/shared/breadcrumbs/edit_organization", organization: @organization, class: "active" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Editing", "Organization",
    subtitle: @organization.name,
    icon: "fas fa-ad" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render "/organizations/form", organization: @organization %>
  </div>
</main>
