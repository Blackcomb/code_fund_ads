<%= simple_form_for organization, html: { class: "js-validate" }, wrapper: :front_form do |f| %>
  <%= render "/shared/forms/section_heading", title: "Organization Details", subtitle: "Tell us about your organization" %>
  <%= render "/shared/forms/error_messages", object: organization %>

  <div class="row">
    <%= tag.div f.input(:name, as: :string, required: true, input_html: { class: "form-control" },
      data: { msg: "Please enter a valid name", error_class: "u-has-error", success_class: "u-has-success" }), class: "col-12 mb-3" %>

    <%= render "shared/forms/button_panel" do %>
      <%= f.submit "Save Organization", class: "btn btn-sm btn-primary transition-3d-hover mr-1" %>
      <%= link_to "Cancel", organizations_path, class: "btn btn-sm btn-soft-secondary transition-3d-hover" %>
    <% end %>
  </div>
<% end %>
