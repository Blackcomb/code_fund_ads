<main id="content" role="main" class="bg-light">
  <div class="container space-top-3 space-bottom-2">
    <div class="w-lg-80 mx-lg-auto">
      <div class="card shadow-sm p-7">
        <%= render partial: "/job_posting_prospects/nav" %>
        <div class="space-top-1">
          <%= simple_form_for @job_posting, url: job_posting_prospects_form_path(@job_posting), wrapper: :front_form,
                data: { controller: "job-posting-prospects-form select-country-province file-picker" } do |f| %>
            <%= render partial: "/job_posting_prospects/form", locals: { f: f } %>
            <div class="d-flex space-top-1">
              <%= link_to "Cancel", jobs_path, class: "btn btn-block btn-sm btn-soft-secondary transition-3d-hover mr-1" %>
              <%= f.submit "Next", class: "btn btn-block btn-sm btn-primary transition-3d-hover ml-1 mt-0" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
