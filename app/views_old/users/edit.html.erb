<% content_for :breadcrumbs do %>
  <%= render "/shared/breadcrumbs/users" if authorized_user.can_admin_system? %>
  <%= render "/shared/breadcrumbs/user", user: @user %>
  <%= render "/shared/breadcrumbs/edit_user", user: @user, class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/shared/actions/show_user", user: @user %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Editing", "User",
    subtitle: "Fill out the form below",
    icon: "fas fa-user-circle" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render "/users/form" %>
  </div>
</main>
