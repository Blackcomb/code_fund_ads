<div class="list-group-item list-group-item-<%= status_color(campaign.status) %>"
     data-target="filterable-list.filterable"
     data-filter-key='<%= "#{campaign.name.downcase} #{campaign.status}" %>'>
  <div class="list-group-item-body">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex">
        <h4 class="list-group-item-title">
          <%= link_to campaign.name, campaign, title: "View campaign", data: tooltip_expando %><br />
          <% if authorized_user.can_admin_system? %>
            <small><%= link_to campaign.organization.name, user_path(campaign.user) %></small>
          <% end %>
        </h4>
      </div>
      <ul class="list-inline text-muted mb-0">
        <li class="d-none d-sm-inline list-inline-item mr-3">
          <span class="badge badge-subtle badge-<%= status_color(campaign.status) %>"><%= campaign.status.humanize %></span>
        </li>
        <%= edit_button(link: edit_campaign_path(campaign)) %>
        <%= goto_button(link: campaign_path(campaign), icon: "fas fa-chevron-right", title: "View campaign") %>
      </ul>
    </div>
  </div>
</div>
