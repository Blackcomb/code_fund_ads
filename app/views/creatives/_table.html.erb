<%= table_wrapper do %>
  <%= paginated_table do %>
    <%= table_head do %>
      <%= table_row header: true do %>
        <%= table_column { "Name" } %>
        <%= table_column { "Copy" } %>
        <%= table_column { "Status" } %>
        <%= table_column { } %>
      <% end %>
    <% end %>
    <%= table_body do %>
      <%= render partial: "/creatives/tr", collection: creatives, as: :creative %>
    <% end %>
  <% end %>
  <%= pagination_wrapper do %>
    <span><%== pagy_bootstrap_nav(pagy) if pagy.pages > 1 %></span>
    <%= pagy_entries(pagy) %>
  <% end %>
<% end %>
