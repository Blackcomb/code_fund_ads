<%= table_row do %>
  <%= table_data do %>
    <%= link_to(creative.name, creative, class: classes("text-muted": creative.archived?)) %>
  <% end %>
  <%= table_data add_class: classes("text-muted": creative.archived?) do %>
    <%= image_tag(creative.icon_image, class: "align-self-start mr-1", width: "20", height: "20") if creative.icon_image %>
    <strong><%= creative.headline %></strong> <%= creative.body %>
  <% end %>
  <%= table_data do %>
    <span class="badge badge-<%= creative_status_color(creative.status) %>">
    <%= creative.status.humanize %>
  <% end %>
  <%= table_data do %>
    <%= edit_button(link: edit_creative_path(creative)) if authorized_user.can_edit_creative?(creative) %>
  <% end %>
<% end %>
