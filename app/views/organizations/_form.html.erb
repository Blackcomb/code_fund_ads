<%= simple_form_for organization, wrapper: :front_form do |f| %>
  <%= render "/shared/forms/error_messages", object: organization %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title do %>
        Team Details
      <% end %>
      <%= card_subtitle do %>
        Tell us about your team
      <% end %>
    <% end %>
    <%= card_body do %>
      <div class="row">
        <%= tag.div f.input(:name, as: :string, required: true, input_html: {class: "form-control"}), class: "col-12 mb-3" %>
        <div class="col-12">
          <div class="media align-items-center mb-3">
            <label class="switcher-control mb-0 mr-3">
              <%= f.check_box :creative_approval_needed, class: "switcher-input" %>
              <span class="switcher-indicator"></span>
            </label>
            <label class="media-body text-muted mb-0">
              <span class="d-block text-dark">Approval needed for creatives?</span>
            </label>
          </div>
        </div>
      </div>
    <% end %>
    <%= card_footer do %>
      <%= card_footer_content do %>
        <%= button_panel margin: "my-0" do %>
          <%= f.submit "Save Team", class: "btn btn-primary" %>
          <%= cancel_button(organizations_path) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
