<%= render layout: "/users/layout", locals: {user: @eventable} do %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title "Events" %>
      <%= card_subtitle "List of events related to this user" %>
    <% end %>
    <%= card_body do %>
      <%= render "/events/table", eventable: @eventable, events: @events %>
    <% end %>
  <% end %>
<% end %>
