<%= table_column add_style: add_style do %>
  <div class="d-flex justify-content-between align-items-center">
    <%= title %>
    <div class="ml-2">
      <%= link_to(tag.span("", class: "fas fa-angle-up datatable-thead-icon #{'text-primary' if selected == 'up'}"), column: column, direction: "asc") %>
      <%= link_to(tag.span("", class: "fas fa-angle-down datatable-thead-icon #{'text-primary' if selected == 'down'}"), column: column, direction: "desc") %>
    </div>
  </div>
<% end %>
