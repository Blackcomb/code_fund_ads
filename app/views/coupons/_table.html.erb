<%= table do %>
  <%= table_head do %>
    <%= table_row header: true do %>
      <%= table_column do %>Code<% end %>
      <%= table_column do %>Type<% end %>
      <%= table_column add_class: "text-right" do %>Discount %<% end %>
      <%= table_column add_class: "text-right" do %>Expiration<% end %>
      <%= table_column add_class: "text-right" do %>Total<% end %>
      <%= table_column add_class: "text-right" do %>Remaining<% end %>
      <%= table_column do %>&nbsp;<% end %>
    <% end %>
  <% end %>
  <%= table_body do %>
    <%= render partial: "/coupons/tr", collection: coupons, as: :coupon %>
  <% end %>
<% end %>
