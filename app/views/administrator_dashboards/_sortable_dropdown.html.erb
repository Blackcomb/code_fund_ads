<div class="col-auto d-none d-sm-flex justify-content-sm-end mb-3" data-controller="sortable-list">
  <div class="dropdown">
    <div class="btn-group" role="group" aria-label="sort">
      <button data-action="click->sortable-list#flip" class="btn btn-secondary">
        <%= current_sort_direction_icon %>
      </button>
      <button class="btn btn-secondary" style="min-width:155px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= session[:sort_by]&.humanize || "Name" %>
        <span class="ml-auto fa fa-caret-down"></span>
      </button>
      <div class="dropdown-menu dropdown-menu-right stop-propagation">
        <div class="dropdown-arrow"></div>
        <h6 class="dropdown-header"> Sort By </h6>
        <% @sortable_columns.each_with_index do |column, index| %>
          <label class="custom-control custom-radio">
            <input type="radio" class="custom-control-input" name="sortCampaignBy" value="<%= index %>" data-action="click->sortable-list#sort" data-column-name="<%= column %>" />
            <span class="custom-control-label"><%= column.humanize %> </span>
          </label>
        <% end %>
      </div>
    </div>
  </div>
</div>
