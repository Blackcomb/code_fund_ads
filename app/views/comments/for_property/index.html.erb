<%= render layout: "/properties/layout", locals: {property: @commentable} do %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title "Comments" %>
      <%= card_subtitle "Comments and notes for this property" %>
    <% end %>
    <%= card_body do %>
      <%= render "/comments/table", commentable: @commentable, comments: @comments %>
    <% end %>
  <% end %>
<% end %>
