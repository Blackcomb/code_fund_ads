<%= render layout: "/shared/layout", locals: {
  subject: @property,
  sidebar: true,
  datepicker: true,
  buttons: [
    layout_button(link: new_property_path, icon: "fas fa-plus", title: "New property"),
    layout_button(link: new_property_path(clone: @property.id), icon: "fad fa-copy", title: "Clone property")
  ]
} do %>
  <small class="text-center d-block text-muted mb-2">
    please ensure ad blockers are disabled to view the overview
  </small>
  <iframe
    class="metabase-card border rounded"
    src="<%= @iframe_url %>"
    title="<%= @property.name %> Metabase dashboard"
    height="600px"
    scrolling="yes"
    allowtransparency>
  </iframe>
<% end %>
