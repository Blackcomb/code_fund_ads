<%= render layout: "/properties/layout", locals: {property: @property} do %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title "Keywords" %>
      <%= card_subtitle "Keywords that associate this property with campaigns" %>
    <% end %>
    <%= card_body do %>
      <% @property.keywords.sort.each do |keyword| %>
        <span class="badge badge-subtle badge-primary p-2 m-1"><%= keyword %></span>
      <% end %>
    <% end %>
  <% end %>
<% end %>
