<%= render layout: "/properties/layout", locals: { property: @property } do %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title do %>
        Overview
      <% end %>
      <%= card_subtitle do %>
        A mini-dashboard specifically for this property.
      <% end %>
    <% end %>
    <%= card_body do %>
      <small class="text-center d-block text-muted">
        ensure ad blockers are disabled to view the overview
      </small>
      <iframe
        src="<%= @iframe_url %>"
        style="width: 100%; min-height: 2000px; border: 0; resize: horizontal;"
        height="2000"
        scrolling="no"
        allowtransparency></iframe>
    <% end %>
  <% end %>
<% end %>
