<div class="table-responsive">
  <table class="js-datatable table table-striped table-compact table-borderless">
    <thead>
      <tr class="border-bottom">
        <th>Index</th>
        <th>Date</th>
        <th>Author</th>
        <th>Event</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% versionable.versions.reverse.each do |version| %>
      <tr>
        <td><%= version.index %></td>
        <td><%= version.created_at %></td>
        <td><%= link_to find_version_author(version), user_path(find_version_author(version)) rescue "Not Assigned" %></td>
        <td><%= version.event.humanize %></td>
        <td class="text-right">
          <a data-controller="remote-modal"
            data-action="click->remote-modal#displayModal"
            data-url="<%= version_path(version, sgid: versionable.to_sgid) %>"
            href="#">
            <i class="fas fa-exchange"></i> Diff
          </a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
