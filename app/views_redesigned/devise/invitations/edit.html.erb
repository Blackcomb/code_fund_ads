<%= render "devise/layout" do %>
  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "mx-auto" }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.input :invitation_token, as: :hidden %>
    <div class="text-center mb-2">
      <h4 class="font-weight-normal">Set your <span class="text-success">Password</span></h4>
      <p>Enter your new password below to create your account.</p>
    </div>
    <div class="form-group">
      <div class="form-label-group">
          <%= f.input :password,
                  label: false,
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: {
                    autocomplete: "new-password",
                    class: "form-control"
                  } %>
        <label class="form-label">New Password</label>
      </div>
      <div class="form-label-group">
        <%= f.input :password_confirmation, label: false, required: true %>
        <label class="form-label">Password Confirmation</label>
      </div>
    </div>
    <%= f.button :submit, "Set my Password", class: "btn btn-primary btn-block" %>
    <%= render "devise/links" %>
  <% end %>
<% end %>
