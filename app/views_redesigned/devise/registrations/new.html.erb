<%= render "devise/layout" do %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form mx-auto" }) do |f| %>
    <%= f.error_notification %>
    <div class="text-center mb-2">
      <h4 class="font-weight-normal">Sign <span class="text-success">Up</span></h2>
    </div>
    <div class="form-group">
      <div class="form-label-group">
        <%= f.input :email,
                    required: true,
                    label: false,
                    autofocus: true,
                    input_html: {
                      autocomplete: "email",
                      class: "form-control"
                    } %>
        <label class="form-label">Email</label>
      </div>
      <div class="form-label-group">
        <%= f.input :password,
                    required: true,
                    label: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: {
                      autocomplete: "new-password",
                      class: "form-control"
                    } %>
        <label class="form-label">Password</label>
      </div>
      <div class="form-label-group">
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    input_html: {
                      autocomplete: "new-password",
                      class: "form-control"
                    } %>
        <label class="form-label">Password Confirmation</label>
      </div>
    </div>
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
    <%= render "devise/links" %>
  <% end %>
<% end %>
