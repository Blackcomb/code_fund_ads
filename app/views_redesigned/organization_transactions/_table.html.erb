<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr class="border-bottom">
        <%= sortable_tr "posted_at", "Date" %>
        <%= sortable_tr "amount_cents", "Amount" %>
        <th scope="col">Reference</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "/organization_transactions/tr", locals: { organization: @organization }, collection: organization_transactions, as: :organization_transaction %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
    <span><%== pagy_bootstrap_nav(pagy) if pagy.pages > 1 %></span>
    <%= pagy_entries(pagy) %>
  </div>
</div>
