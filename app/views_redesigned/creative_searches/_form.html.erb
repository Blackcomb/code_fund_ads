<%= simple_form_for @creative_search, wrapper: :filter_form do |f| %>
  <%= f.input(:name, required: false) %>

  <% if authorized_user.can_admin_system? %>
    <%= f.input(:user_id, label: "Advertiser", collection: advertisers_for_select, required: false, input_html: {data: {controller: "select"}}) %>
  <% end %>

  <div class="text-right">
    <%= f.button :submit, value: "Apply Filters", class: "btn btn-sm btn-primary" %>
    <%= link_to "Clear", creative_search_path(@creative_search.to_gid_param), class: "btn-sm btn-subtle-secondary ml-3", method: :delete %>
  </div>
<% end %>
