<%= card do %>
  <%= card_header do %>
    <%= nav_tabs add_class: "card-header-tabs" do %>
      <%= nav_item_link name: "Send Now", id: "nav-send-now-tab", path: "#nav-send-now", type: "tab" %>
      <%= nav_item_link name: "Schedule", id: "nav-schedule-tab", path: "#nav-schedule", type: "tab", active: :exact %>
    <% end %>
  <% end %>
  <%= card_body do %>
    <div class="tab-content">
      <div id="nav-send-now" class="tab-pane show active" role="tabpanel" aria-labelledby="nav-send-now-tab">
        <%= render "/organization_reports/form",
            organization: @organization,
            organization_report: @organization_report,
            url: organization_reports_path(@organization) %>
      </div>
      <div id="nav-schedule" class="tab-pane fade py-3" role="tabpanel" aria-labelledby="nav-schedule-tab">
        <%= render "/scheduled_organization_reports/form",
            organization: @organization,
            scheduled_organization_report: @scheduled_organization_report %>
      </div>
    </div>
  <% end %>
<% end %>
