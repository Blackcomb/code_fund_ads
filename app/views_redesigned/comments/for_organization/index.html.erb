<%= render layout: "/organizations/layout", locals: {organization: @commentable} do %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title do %>
        Comments
      <% end %>
      <%= card_subtitle do %>
        Comments and notes for this organization
      <% end %>
    <% end %>
    <%= card_body do %>
      <%= render "/comments/table", commentable: @commentable, comments: @comments %>
    <% end %>
  <% end %>
<% end %>
