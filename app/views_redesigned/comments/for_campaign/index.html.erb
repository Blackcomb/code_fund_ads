<%= render layout: "/campaigns/layout", locals: { campaign: @commentable } do %>
  <%= card do %>
    <%= card_header do %>
      <%= card_title do %>
        Comments
      <% end %>
      <%= card_subtitle do %>
        Comments and notes for this campaign
      <% end %>
    <% end %>
    <%= card_body do %>
      <%= render "/comments/table", commentable: @commentable, comments: @comments %>
    <% end %>
  <% end %>
<% end %>
