<% content_for :page_heading do %>
  <%= page_heading "Edit", "Image",
    subtitle: "for #{@imageable.imageable_name}",
    icon: "fas fa-images" %>
<% end %>

<%= render layout: "/images/layout", locals: {imageable: @imageable, override: [ :page_heading, :actions ]} do %>
  <%= render "/images/form_metadata", imageable: @imageable, image: @image %>
<% end %>
